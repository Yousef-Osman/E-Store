@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    .table {
        color: #54595e;
    }

    .text-dim {
        color: #54595e;
    }
</style>

<div class="px-4 px-lg-0 mt-5">
    <div class="pb-5">
        <div class="container">
            <div class="p-5 bg-white rounded shadow mb-5">
                <h5 class="p-2 px-3 text-uppercase text-dim"><strong>Shopping Cart</strong></h5>
                <div class="row">
                    <div class="col-lg-9 d-flex flex-column">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="p-2 px-3 text-uppercase">Product</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="p-2 px-3 text-uppercase">Name</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Price</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Quantity</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Remove</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="https://bootstrapious.com/i/snippets/sn-cart/product-1.jpg" alt="" width="70" class="img-fluid rounded shadow-sm">
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle"><strong>Timex Unisex Originals</strong></td>
                                        <td class="border-0 align-middle"><strong>$79.00</strong></td>
                                        <td class="border-0 align-middle">
                                            <div class="d-flex align-items-center">
                                                <a asp-action="#"><i class="fa-solid fa-circle-minus text-danger"></i></a>
                                                <strong class="mx-2">3</strong>
                                                <a asp-action="#"><i class="fa-solid fa-circle-plus text-primary"></i></a>
                                            </div>
                                        </td>
                                        <td class="border-0 align-middle"><a href="#" class="text-dark"><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <div class="p-2">
                                                <img src="https://bootstrapious.com/i/snippets/sn-cart/product-2.jpg" alt="" width="70" class="img-fluid rounded shadow-sm">
                                            </div>
                                        </th>
                                        <td class="align-middle"><strong>Lumix camera lense</strong></td>
                                        <td class="align-middle"><strong>$79.00</strong></td>
                                        <td class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <a asp-action="#"><i class="fa-solid fa-circle-minus text-danger"></i></a>
                                                <strong class="mx-2">3</strong>
                                                <a asp-action="#"><i class="fa-solid fa-circle-plus text-primary"></i></a>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <a href="#" class="text-dark"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <a href="#" class="btn btn-outline-secondary py-2 mt-auto me-auto">Continue Shopping</a>
                    </div>
                    <div class="col-lg-3 d-flex flex-column">
                        <div class="bg-light px-4 py-3 text-uppercase text-dim"><strong>Order summary</strong> </div>
                        <div class="p-4">
                            <p class="font-italic mb-4">Shipping and additional costs are calculated based on values you have entered.</p>
                            <ul class="list-unstyled mb-4">
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal </strong><strong>$390.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and handling</strong><strong>$10.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Tax</strong><strong>$0.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom">
                                    <strong class="text-muted">Total</strong>
                                    <h5 class="font-weight-bold">$400.00</h5>
                                </li>
                            </ul>
                        </div>
                        <a href="#" class="btn btn-dark py-2 mt-auto mx-4">Procceed to checkout</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




