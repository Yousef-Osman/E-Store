@model ProductVM

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="row">
            <div class="col-12 col-md-6">
                <img class="img-fluid p-3" src="~/@Model.ImageUrl" alt="">
            </div>
            <div class="col-12 col-md-6 p-5">
                <div class="d-flex flex-column">
                    @*<p class="product-category mb-0">Graphite</p>*@
                    <h3>@Model.Name</h3>
                    <hr class="my-2">
                    <h6 class="mt-3 mb-4 text-secondary">Price: <span class="text-success h4">@Model.Price.ToString("n")</span> EGP</h6>
                    <div class="d-flex">
                        <a asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-id="@Model.Id"
                           asp-route-returnUrl="@Context.Request.Path" class="btn btn-warning" style="color: #444;">Add to cart <i class="fa-solid fa-cart-shopping"></i></a>
                        @*<form class="col-auto row me-1" method="post">
                        <div class="col-auto pe-0 me-1"><input type="number" class="form-control" id="cart_quantity" name="cart_quantity" value="1" min="1" max="10"></div>
                        <button name="add_to_cart" type="submit" class="btn btn-warning col-auto">Add to cart <i class="fa-solid fa-cart-shopping"></i></button>
                        </form>*@
                        @* <form class="col-auto" method="post">
                        <button name="add_to_cart" type="submit" class="btn btn-primary col">Add to Wishlist</button>
                        </form>*@
                    </div>
                    <hr class="my-4">
                    <h5 class="mb-1">About this product</h5>
                    <p class="mb-0">@Model.Description</p>
                    <hr class="my-4">
                    <div>
                        <h6 class="text-secondary">Brand: <strong>@Model.BrandName</strong></h6>
                        <h6 class="text-secondary">
                            Categories:
                            @foreach (var category in @Model.CategoryNames)
                            {
                                <span class="badge bg-secondary" style="margin-bottom:2px;">@category</span>
                            }
                        </h6>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary mt-3 mt-auto ms-auto">Back to results</a>
                </div>
            </div>
        </div>
    </div>
</div>
