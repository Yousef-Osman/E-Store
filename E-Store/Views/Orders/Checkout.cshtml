@model OrderVM

@{
    ViewData["Title"] = "Checkout";
}

<div class="card p-5 my-5 shadow">
    <h4 class="mb-4 text-uppercase text-dim"><strong>Add Your Order</strong></h4>
    <div class="row">
        <div class="col-md-4 order-md-2">
            <div class="bg-light px-4 py-3 text-uppercase text-dim" style="margin-bottom: 40px;"><strong>Your cart</strong></div>
            @*<h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">3</span>
            </h4>*@
            <ul class="list-group mb-3">
                @foreach (var item in Model.CartItems)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.ProductName</h6>
                            <small class="text-muted">Quantity: @item.Quantity</small>
                        </div>
                        <span class="text-muted">@((item.Price * item.Quantity).ToString("n")) EGP</span>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (EGP)</span>
                    <strong>@Model.TotalPrice.ToString("n")</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <div class="bg-light px-4 py-3 mb-3 text-uppercase text-dim"><strong>Shipping address</strong></div>
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <span class="text-muted"> (Optional)</span>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="AddressLine1" class="control-label"></label>
                    <input asp-for="AddressLine1" class="form-control" />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AddressLine2" class="control-label"></label>
                    <span class="text-muted"> (Optional)</span>
                    <input asp-for="AddressLine2" class="form-control" />
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xl-3 mb-3">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-3">
                        <label asp-for="State" class="control-label"></label>
                        <span class="text-muted"> (Optional)</span>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-3">
                        <label asp-for="Country" class="control-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-3">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <span class="text-muted"> (Optional)</span>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <button class="btn btn-primary mt-2" type="submit">Continue to checkout</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
